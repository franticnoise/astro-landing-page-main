  {
    title: "React",
    icon: "frameworks/react",
    localicon: '../assetss/aws-svgrepo-com.svg',
    url: "https://reactjs.org/",
  },
  {
    title: "Angular",
    icon: "frameworks/angular",
    url: "https://preactjs.com/",
  },
  {
    title: "Node",
    icon: "frameworks/nodejs",
