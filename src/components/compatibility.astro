    icon: "frameworks/wordpress",
    url: "https://www.solidjs.com/",
  },
  {
    title: "PHP",
    icon: "frameworks/php2",
    url: "https://lit.dev/",
  },
];

const platforms = [
  {
    title: "Netlify",
    icon: "platforms/netlify",
    url: "https://www.netlify.com/",
  },
  {
